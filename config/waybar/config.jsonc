{
    "reload_style_on_change": true,
    "layer": "bottom",
    "position": "top",
    "spacing": 0,
    "modules-left": [
        "image#arch",
        "group/hyprland"
    ],
    "modules-right": [
        "tray",
        "group/hardware",
        "group/connectivityAndAudio",
        "clock",
        "custom/notification"
    ],
    "custom/notification": {
        "format": "",
        "on-click": "swaync-client -op"
    },
    "group/hyprland": {
        "orientation": "inherit",
        "modules": [
            "hyprland/workspaces",
            "group/hyprland-window"
        ]
    },
    "hyprland/workspaces": {
        "on-click": "activate",
        "format": "{name}{windows}",
        "window-rewrite-default": " ",
        "persistent-workspaces": {
            "DP-1": [
                1,
                2,
                3,
                4,
                5
            ],
            "DP-2": [
                6,
                7,
                8,
                9,
                10
            ]
        },
        "format-window-separator": "",
        "window-rewrite": {
            "title<.*youtube.*>": " 󰗃",
            "title<.*gmail.*>": " 󰊫",
            "title<.*messages.*>": " 󰭹",
            "class<.*brave.*> title<.*chatgpt.*>": " 󰧑",
            "youtubetitle<Picture-in-Picture>": " 󰗃",
            "class<.*brave.*>": " ",
            "class<firefox>": " ",
            "class<firefox> title<.*github.*>": " ",
            "class<.*obs.*studio.*>": " ",
            "wezterm": " ",
            "alacritty": " ",
            "code": " 󰨞",
            "spotify": " ",
            "vesktop": " 󰙯",
            "rofi": " 󰀻",
            "obsidian": " 󰠮",
            "kdenlive": " ",
            "pinta": " ",
            "localsend": " 󰆨",
            "class<.*jetbrains-studio.*>": " 󰀴"
        }
    },
    "custom/arrow": {
        "format": "  ",
        "tooltip": false
    },
    "group/hyprland-window": {
        "orientation": "inherit",
        "modules": [
            "custom/arrow",
            "hyprland/window"
        ]
    },
    "hyprland/window": {
        "format": "{title}",
        "icon": true,
        "icon-size": 14,
        "rewrite": {
            "(.*) — Mozilla Firefox": "$1"
        }
    },
    "tray": {
        "icon-size": 14,
        "spacing": 12
    },
    "hyprland/submap": {
        "format": "{}",
        "max-length": 8
    },
    "group/hardware": {
        "orientation": "inherit",
        "modules": [
            "cpu",
            "memory",
            "custom/gpu"
        ]
    },
    "memory": {
        "interval": 30,
        "format": "  {}% ",
        "max-length": 10,
        "on-click": "wezterm -e btop"
    },
    "cpu": {
        "interval": 1,
        "format": " {usage}%",
        "on-click": "wezterm -e btop"
    },
    "custom/gpu": {
        "format": "{}",
        "tooltip": true,
        "interval": 2,
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/gpu_usage.sh",
        "on-click": "wezterm -e btop"
    },
    "group/connectivityAndAudio": {
        "orientation": "inherit",
        "modules": [
            "pulseaudio",
            "bluetooth",
            "network"
        ]
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "on-click": "pavucontrol",
        "scroll-step": 5,
        "format-muted": "󰝟",
        "format-icons": {
            "default": [
                "",
                "",
                ""
            ]
        }
    },
    "bluetooth": {
        "format": "",
        "format-disabled": "󰂲",
        "format-connected": " {status}",
        "tooltip-format": "Devices connected: {num_connections}",
        "on-click": "blueberry"
    },
    "network": {
        "format-icons": [
            "󰤯",
            "󰤟",
            "󰤢",
            "󰤥",
            "󰤨"
        ],
        "format": "{icon} ",
        "format-wifi": "{icon} {essid}",
        "format-ethernet": "󰀂 ",
        "format-disconnected": "󰖪 ",
        "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "tooltip-format-disconnected": "Disconnected",
        "interval": 3,
        "nospacing": 1,
        "on-click": "nm-applet"
    },
    "clock": {
        "format": "{:%A %B %d (%R)} 󰃰 ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "tz_down",
            "on-scroll-down": "tz_up",
            "on-scroll-up": "shift_down",
            "on-scroll-down": "shift_up"
        }
    },
    "image#arch": {
        "path": "/home/juderozario/.config/waybar/Arch.png",
        "size": 18,
        "tooltip": false
    }
}
